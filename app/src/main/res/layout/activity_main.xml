<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ppl.ezsend.MainActivity">

    <ImageButton
        android:id="@+id/My_Image_Button"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:adjustViewBounds="true"
        android:background="@drawable/aboutus" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignTop="@+id/imageButton6"
        android:layout_marginStart="53dp"
        android:layout_toEndOf="@+id/imageButton6"
        android:background="@drawable/cekharga" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/cekresi" />

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignStart="@+id/imageButton6"
        android:layout_alignTop="@+id/imageButton8"
        android:background="@drawable/contactus" />

    <ImageButton
        android:id="@+id/imageButton8"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignStart="@+id/imageButton5"
        android:layout_centerVertical="true"
        android:background="@drawable/droppoint" />
</RelativeLayout>
