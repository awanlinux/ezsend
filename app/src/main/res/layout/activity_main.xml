<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:columnCount="2"
    app:rowCount="2"
    app:orientation="horizontal"
    >

    <FrameLayout
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:background="#EDF7FF"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_centerInParent="true"
                android:background="@drawable/button_pressed"
                android:id="@+id/user"
                android:src="@drawable/kirimpaket"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="0dp"
                android:textSize="20sp"
                android:textColor="#848080"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user"
                android:layout_centerHorizontal="true"
                android:text="Kirim Paket"/>
        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:background="#FFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/button_pressed"
                android:layout_centerInParent="true"
                android:id="@+id/job"
                android:src="@drawable/trackpaket"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="0dp"
                android:textSize="20sp"
                android:textColor="#848080"
                android:layout_height="wrap_content"
                android:layout_below="@+id/job"
                android:layout_centerHorizontal="true"
                android:text="Track Paket"/>
        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:background="#FFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_centerInParent="true"
                android:id="@+id/notif"
                android:background="@drawable/button_pressed"
                android:src="@drawable/cekharga"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="0dp"
                android:textSize="20sp"
                android:textColor="#848080"
                android:layout_height="wrap_content"
                android:layout_below="@+id/notif"
                android:layout_centerHorizontal="true"
                android:text="Cek Harga"/>
        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:background="#EDF7FF"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_centerInParent="true"
                android:id="@+id/mail"
                android:background="@drawable/button_pressed"
                android:src="@drawable/droppoint"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="0dp"
                android:textColor="#848080"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mail"
                android:layout_centerHorizontal="true"
                android:text="Drop-Point"/>
        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:background="#EDF7FF"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_centerInParent="true"
                android:id="@+id/rate"
                android:background="@drawable/button_pressed"
                android:src="@drawable/kontakkami"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="0dp"
                android:textColor="#848080"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rate"
                android:layout_centerHorizontal="true"
                android:text="Contact Us"/>
        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:background="#FFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_centerInParent="true"
                android:id="@+id/rev"
                android:background="@drawable/button_pressed"
                android:src="@drawable/ezsend"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="0dp"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rev"
                android:layout_centerHorizontal="true"
                android:textColor="#848080"
                android:text="Tentang Kami"/>
        </RelativeLayout>
    </FrameLayout>
</android.support.v7.widget.GridLayout>